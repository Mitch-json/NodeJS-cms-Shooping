<% include _layouts/header %>

<div class="row">
    <h1 class="page-header" style="margin: 30px; width: 100%;"><%- product.title %> </h1>
    
    <div class="col-xs-12 col-md-5">
        <img src="/product_images/<%= product.id %>/<%= product.image %>  " alt="" class="spi">
        <br>
    </div>
    <div class="col-xs-12 col-md-7">
        <p><%- product.desc %> </p>
        <p>KSH <%- parseInt(product.price) %> </p>
        <p><a href="/cart/add/<%= product.slug %>" class="btn btn-primary">Add to cart</a></p>
    </div>
    <div class="col-xs-12">
        <ul class="gallery">
            <% galleryImages.forEach(image => { %>
                <% if (image != "thumbs") { %>
                    <li>
                        <a data-fancybox="gallery" href="/product_images/<%= product.id %>/gallery/<%= image %>  ">
                            <img src="/product_images/<%= product.id %>/gallery/thumbs/<%= image %>" alt="">
                        </a>
                    </li>
                <% } %>
            <% }) %>
        </ul>
    </div>
</div>

<% include _layouts/footer %> 