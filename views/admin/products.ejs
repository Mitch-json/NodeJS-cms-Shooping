<%- include ../_layouts/adminheader %>

<h2 class="page-title">Products</h2>
<a href="/admin/products/add-product" class="btn btn-primary">Add a product</a>
<br><br>

<% if (count > 0) { %>

<table class="table table-striped alignmiddle">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Category</th>
            <th>Product image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(product => { %> 
            <tr>
                <td><%= product.title %> </td>
                <td>KSH <%= product.price %> </td>
                <td><%= product.category %> </td>
                <td>
                    <% if (product.image == "") { %>
                        <img id="noimage" src="/images/noimage.png">
                    <% } else { %>
                        <img id="noimage" style="max-height: 100px; max-width: 150px; height: auto; width: auto;" src="/product_images/<%= product._id %>/<%= product.image %> ">
                    <% } %>
                </td>
                <td><a href="/admin/products/edit-product/<%= product._id %> ">Edit</a></td>
                <td><a href="/admin/products/delete-product/<%= product._id %> ">Delete</a></td>
            </tr>
        <% }) %>
    </tbody>
</table>

<% } else {%>
    <h3 class="text-center">There are no products</h3>
<% } %>

<%- include ../_layouts/adminfooter %>  