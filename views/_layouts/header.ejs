<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= title %> </title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" />
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" ></script>

</head>
<body>
    <div class="ajaxbg">
        <div class="ajaxinner">
            <h3>You are now being redirected to paypal...</h3>
            <img height="200px" width="300px" src="/images/ajax-loader.gif" alt="">
        </div>
    </div>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Mitch-Shopping</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <% locals.pages.forEach(page => { %>
                    <% if (page.slug == "home-page") { %>
                        <li class="nav-item active">
                            <a class="nav-link" href="/"><%= page.title %> </a>
                        </li>
                        <% } else {%>
                        <li class="nav-item active">
                            <a class="nav-link" href="<%= page.slug %> "><%= page.title %> </a>
                        </li>
                    <% } %>
                <% }) %>
            </ul>
            <ul class="navbar-nav mr-auto navbar-right">
                <li class="nav-item active">
                    <a class="cart-link" href="/cart/checkout">My Cart (
                        <% if (typeof locals.cart !== "undefined") { %>
                            <%= locals.cart.length %> 
                        <% } else {%>
                            0
                        <% } %>
                        
                    )</a>
                </li>
                <% if (typeof locals.users !== "undefined") { %>
                    <li class="nav-item active">
                        <a class="cart-link" href="#"> <%= locals.users.username %> </a>
                    </li>
                    <li class="nav-item active">
                        <a class="cart-link" href="/users/logout">Logout</a>
                    </li>
                <% } else {%>
                    <li class="nav-item active">
                        <a class="cart-link" href="/users/login">Sign In</a> 
                    </li>
                    <li class="nav-item active">
                        <a class="cart-link" href="/users/register">Register</a> 
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>

    <div class="container" style="margin-top: 30px;">
        <% include ../messages %>

        <div class="row">
            <div class="col-xs-12 col-md-3">
                <h3>Categories</h3>
                <br>
                <ul class="list-group">
                    <li class="list-group-item"><a href="/products">All Products</a></li>
                    <% locals.categories.forEach(category => { %>
                        <li class="list-group-item"><a href="/products/<%= category.slug %>"><%= category.title %> </a></li>
                    <% }) %>
                </ul>
            </div>
            <div class="col-xs-12 col-md-1"></div>
            <div class="col-xs-12 col-md-8">


